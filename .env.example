# ===========================
# BilanCompetence.AI - Environment Variables
# ===========================

# NODE ENVIRONMENT
NODE_ENV=development

# ===========================
# SUPABASE
# ===========================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===========================
# AUTHENTICATION
# ===========================
NEXTAUTH_SECRET=generate-a-very-long-random-string-minimum-32-characters-required
NEXTAUTH_URL=http://localhost:3000

# ===========================
# GOOGLE GEMINI AI
# ===========================
GOOGLE_GEMINI_API_KEY=AIzaSyD...your-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# ===========================
# STRIPE PAYMENTS
# ===========================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_51...
STRIPE_SECRET_KEY=sk_test_51...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Product IDs
STRIPE_STARTER_PRICE_ID=price_1234567890starter
STRIPE_PROFESSIONAL_PRICE_ID=price_1234567890professional
STRIPE_ENTERPRISE_PRICE_ID=price_1234567890enterprise

# ===========================
# EMAIL (SendGrid)
# ===========================
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@bilancompetence.ai
EMAIL_FROM_NAME=BilanCompetence.AI
EMAIL_SUPPORT=support@bilancompetence.ai

# ===========================
# STORAGE
# ===========================
SUPABASE_BUCKET_NAME=bilan-files
SUPABASE_BUCKET_REGION=eu-west-1

# ===========================
# LOGGING & MONITORING
# ===========================
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxxxxx.ingest.sentry.io/xxxxxxxx
SENTRY_ENVIRONMENT=development
LOG_LEVEL=debug

# ===========================
# PDF GENERATION
# ===========================
PUPPETEER_HEADLESS=true
PDF_TIMEOUT_MS=5000
PDF_STORAGE_PATH=/tmp/pdfs

# ===========================
# FRANCE TRAVAIL API (Future Integration)
# ===========================
FRANCE_TRAVAIL_API_KEY=your-api-key-here
FRANCE_TRAVAIL_BASE_URL=https://api.francetravail.io

# ===========================
# APPLICATION SETTINGS
# ===========================
NEXT_PUBLIC_APP_NAME=BilanCompetence.AI
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.pdf,.doc,.docx

# ===========================
# RATE LIMITING
# ===========================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================
# SESSION
# ===========================
SESSION_SECRET=another-long-random-secret-for-session-encryption
SESSION_TIMEOUT_MINUTES=30

# ===========================
# FEATURE FLAGS
# ===========================
FEATURE_AI_ANALYSIS=true
FEATURE_FRANCE_TRAVAIL_INTEGRATION=false
FEATURE_VIDEO_CALLS=false
FEATURE_MOBILE_APP=false

# ===========================
# DEVELOPMENT ONLY
# ===========================
ENABLE_DEBUG_LOGS=true
SKIP_EMAIL_VERIFICATION=false
MOCK_STRIPE_WEBHOOKS=false
